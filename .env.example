# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
DEBUG=True
DJANGO_SECRET_KEY=dev-only-insecure-key-not-for-production
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE (PostgreSQL via Docker)
# =============================================================================
DATABASE_URL=postgresql://dms_user:dms_password@db:5432/dms_db
POSTGRES_DB=dms_db
POSTGRES_USER=dms_user
POSTGRES_PASSWORD=dms_password

# =============================================================================
# REDIS (Celery Broker)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# =============================================================================
# AZURE STORAGE (Optional - leave empty for local file storage)
# =============================================================================
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER=documents

# =============================================================================
# EMAIL CONFIGURATION (Development uses console backend)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@localhost

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_URL=http://localhost:8080
MFA_DOMAIN=localhost

# =============================================================================
# GDPR & COMPLIANCE
# =============================================================================
GDPR_CONSENT_VERSION=1.0

# =============================================================================
# AZURE INGEST (Optional - f√ºr E-Mail Import)
# =============================================================================
AZURE_INGEST_CLIENT_ID=
AZURE_INGEST_CLIENT_SECRET=
AZURE_INGEST_TENANT_ID=
AZURE_INGEST_MAILBOX=ingest@dms.cloud

# =============================================================================
# FILE PATHS
# =============================================================================
SAGE_ARCHIVE_PATH=/data/sage_archive
EMAIL_ARCHIVE_PATH=/data/email_archive
